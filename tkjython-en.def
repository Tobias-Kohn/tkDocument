%%   Titlepage.                                                              %%
%%                                                                           %%
%%                                                                           %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%
\def\@impressum{Copyright \copyright\ \the\year,\\\@author}
\long\def\impressum#1{\global\def\@impressum{#1}}
\def\maketitle{%
  \newpage
    \thispagestyle{empty}
	\null
	\vskip1.75in
	\begin{fullwidth}
	\sffamily
	{\color{maroon}
    {\Huge\@title\par}
	\ifx\@subtitle\relax\else
	  \vskip2.5ex
      {\Large\@subtitle\\}
	\fi}
	{\color{dark_orange}\rule{\linewidth}{1.2pt}}
	\vskip3ex
    {\itshape\large\@author}
	\end{fullwidth}
  \newpage
    \thispagestyle{empty}
    \null
    \vfill
    \@impressum
  \newpage
  \if@tk@book\else%
    \markboth{\@title}{\@title}%
	\let\sectionmark=\markright%
  \fi
}
